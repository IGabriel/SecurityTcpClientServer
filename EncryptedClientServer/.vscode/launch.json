    "version": "0.2.0",
    "configurations": [
    {
        "name": "Client console",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/ClientConsole/bin/Debug/netcoreapp2.2/ClientConsole.dll",
        "args": ["localhost", "7788"],
        "cwd": "${workspaceFolder}/ClientConsole",
        "stopAtEntry": false,
        "console": "internalConsole"
    },
    {
        "name": "Server console",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/ServerConsole/bin/Debug/netcoreapp2.2/ServerConsole.dll",
        "args": ["7788"],
        "cwd": "${workspaceFolder}/ServerConsole",
        "console": "internalConsole",
        "stopAtEntry": false
    }
    ]
}